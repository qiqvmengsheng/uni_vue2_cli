{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uview-ui
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
			// @dcloudio
			// "^uni-(.*)": "@dcloudio/uniui/lib/uni-$1/uni-$1.vue",
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			},
			"name": "index"
		},
		{
			"path": "pages/addDevice/index",
			"style": {
				"navigationBarTitleText": "添加设备",
				"backgroundColor": "#F8F8F8"
			},
			"name": "addDevice"
		},
		{
			"path": "pages/index/user/index",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			},
			"name": "user"
		},
		{
			"path": "pages/commandView/index",
			"style": {
				"navigationBarTitleText": "设置",
				"backgroundColor": "#F8F8F8"
			},
			"name": "commandView"
		},
		{
			"path": "pages/chartView/index",
			"style": {
				"navigationBarTitleText": "图表"
			},
			"name": "chartView"
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "麟荔科技",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	// 原生的导航
	"tabBar": {
		"color": "#000000",
		"selectedColor": "#15406d",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/home2.png",
				"selectedIconPath": "static/home.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/index/user/index",
				"iconPath": "static/me2.png",
				"selectedIconPath": "static/me.png",
				"text": "我的"
			}
		]
	}
}